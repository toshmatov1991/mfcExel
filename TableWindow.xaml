<Window x:Class="exel_for_mfc.TableWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Главное окно" Height="450" Width="800">
    <Grid>
        <DataGrid x:Name="dataGrid" CanUserAddRows="True"  AutoGenerateColumns="True" CellEditEnding="dataGrid_CellEditEnding" MouseDoubleClick="Interes">
            <DataGrid.Columns>
                <DataGridTextColumn Binding="{Binding Id, UpdateSourceTrigger=PropertyChanged}" IsReadOnly="True" Header="№п/п"/>
                <DataGridTextColumn Binding="{Binding FIO, UpdateSourceTrigger=PropertyChanged}" Header="ФИО Заявителя"/>
                <DataGridTextColumn Binding="{Binding Pass, UpdateSourceTrigger=PropertyChanged}" Header="Снилс"/>
                <DataGridComboBoxColumn ItemsSource="{Binding CompanyItems}"  SelectedItemBinding="{Binding Path=PostscriptLat}"  Header="Район"/>
                <DataGridComboBoxColumn ItemsSource="{Binding CompanyItems}"  Header="Населенный пункт"/>
                <DataGridTextColumn x:Name="gfh" Binding="{Binding Pass, UpdateSourceTrigger=PropertyChanged}" Header="Адрес"/>
                <DataGridComboBoxColumn ItemsSource="{Binding CompanyIte}"  Header="Льгота"/>
                <DataGridTextColumn Binding="{Binding Pass, UpdateSourceTrigger=PropertyChanged}" Header="Серия и № сертификата"/>
                <DataGridComboBoxColumn ItemsSource="{Binding CompanyIte}"  Header="Размер выплаты"/>
                <DataGridTextColumn Binding="{Binding Pass, UpdateSourceTrigger=PropertyChanged}" Header="Статус сертификата"/>
                <DataGridTextColumn Binding="{Binding Pass, UpdateSourceTrigger=PropertyChanged}" Header="Решение по сертификату"/>
                <DataGridTextColumn Binding="{Binding Pass, UpdateSourceTrigger=PropertyChanged}" Header="Трек"/>
                <DataGridTextColumn Binding="{Binding Pass, UpdateSourceTrigger=PropertyChanged}" Header="Дата отправки почтой"/>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Window>
